#
# Makefile.shared
#

include $(CHAPEL_ROOT)/runtime/etc/Makefile.include

all: $(TMPBINNAME)

$(TMPBINNAME): $(CHPL_CL_OBJS) FORCE
	$(CC) $(GEN_CFLAGS) $(COMP_GEN_CFLAGS) -c -o $(TMPBINNAME).o -I$(CHAPEL_RT_INC_DIR) -I. $(CHPLSRC)
ifdef NVCC
	$(NVCC) $(HEADER_CFLAGS) $(RUNTIME_CUDA_CFLAGS) -c -o $(TMPBINNAME_GPU).o -I$(CHAPEL_RT_INC_DIR) -I. $(CHPL_GPU_SRC)
	$(LD) $(GEN_LFLAGS) $(COMP_GEN_LFLAGS) -o $(TMPBINNAME) -L$(CHAPEL_RT_LIB_DIR) $(TMPBINNAME).o $(TMPBINNAME_GPU).o $(CHPL_CL_OBJS) -lchpl -lm $(LIBS)
else
	$(LD) $(GEN_LFLAGS) $(COMP_GEN_LFLAGS) -o $(TMPBINNAME) -L$(CHAPEL_RT_LIB_DIR) $(TMPBINNAME).o $(CHPL_CL_OBJS) -lchpl -lm $(LIBS)
endif
ifneq ($(TMPBINNAME),$(BINNAME))
	cp $(TMPBINNAME) $(BINNAME)
	rm $(TMPBINNAME)
endif
	$(TAGS_COMMAND)

FORCE:
