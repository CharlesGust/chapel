VER = RV_EA_WB

GTM_CFLAGS += -DGTM_$(VER)

ifeq ($(CHPL_STM_GTM_STATS), wstats)
GTM_CFLAGS += -DGTM_STATS
endif

STM_SRCS = \
	stm-gtm.c \
	stm-gtm-desc.c \
	stm-gtm-memory.c \
	stm-gtm-$(VER).c \
	stm-gtm-stats.c \

SVN_SRCS = $(STM_SRCS)
SRCS = $(SVN_SRCS)

STM_OBJS = \
	$(STM_SRCS:%.c=$(STM_OBJDIR)/%.o) \
	$(STM_COMM_OBJS) 

RUNTIME_CFLAGS += $(GTM_CFLAGS) -I$(LIBATOMIC_INSTALL_DIR)/include
