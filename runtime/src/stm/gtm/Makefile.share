VER = RV_EA_WB

GTM_CFLAGS += -DGTM_$(VER)
GTM_CFLAGS += -DSTM_STATS

STM_SRCS = \
	stm-gtm.c \
	stm-gtm-comm.c \
	stm-gtm-$(VER).c \
	stm-gtm-stats.c \
	
SVN_SRCS = $(STM_SRCS)
