#!/usr/bin/env python

import sys, os, shutil, string;

testname=sys.argv[1]
compopts=sys.argv[4]

chpl_comm = os.getenv('CHPL_COMM')
if chpl_comm=='none' or chpl_comm==None:
    dist = 'default'
else:
    dist = 'block'

searchstring='distType=DistType.'
s = string.rfind(compopts, searchstring)


if s != -1:
    opt = compopts[s+len(searchstring):len(compopts)]
    dist = opt.split()[0]

if dist=='cyclic':
    # expected error, but preserve only the unique error messages (e.g., | sort | uniq )
    execlog = sys.argv[2]
    f = open(execlog, 'r')
    lines = f.readlines()
    lines.sort()
    f.close()
    newlines = list()
    last = ''
    for l in lines:
        if l != last:
            newlines.append(l)
        last = l
    f = open(execlog, 'w')
    f.writelines(newlines)
    f.close()

goodfn=testname+'.'+dist+'.good'
if os.path.isfile(goodfn):
    shutil.copy(goodfn, testname+'.good')
else:
    shutil.copy(testname+'.default.good', testname+'.good')

