#!/usr/bin/env python

import sys, os, shutil, string;

testname=sys.argv[1]
compopts=sys.argv[4]

chpl_comm = os.getenv('CHPL_COMM')
if chpl_comm!='none' and chpl_comm!=None:
    good = 'no-local'
else:
    searchstring='--no-local'
    s = string.rfind(compopts, searchstring)

    if s != -1:
        good = 'no-local'
    else:
        good = 'default'

goodfn=testname+'.'+good+'.good'
if os.path.isfile(goodfn):
    shutil.copy(goodfn, testname+'.good')
else:
    print "PREDIFF ERROR: No matching .good file found."
    exit(-1)

exit(0)

