CODELET_DIR=$(THIRD_PARTY_DIR)/codelet
CODELET_INSTALL_DIR=$(CODELET_DIR)/install


HWLOC_VERSION = 1.4.1
HWLOC_DIR=$(CODELET_DIR)/hwloc
HWLOC_SUBDIR=$(HWLOC_DIR)/hwloc-$(HWLOC_VERSION)
HWLOC_UNIQUE_SUBDIR=$(CHPL_MAKE_TARGET_PLATFORM)-$(CHPL_MAKE_TARGET_COMPILER)
HWLOC_INSTALL_SUBDIR=install/$(HWLOC_UNIQUE_SUBDIR)
HWLOC_INSTALL_DIR=$(CODELET_DIR)/$(HWLOC_INSTALL_SUBDIR)
HWLOC_BUILD_SUBDIR=build/$(HWLOC_UNIQUE_SUBDIR)
HWLOC_BUILD_DIR=$(CODELET_DIR)/$(HWLOC_BUILD_SUBDIR)
HWLOC_SRC_DIR = $(HWLOC_SUBDIR)/src
HWLOC_INCLUDE_DIR = $(HWLOC_INSTALL_DIR)/include
HWLOC_INCLUDE2_DIR = $(HWLOC_BUILD_DIR)/src
HWLOC_LIB_DIR = $(HWLOC_INSTALL_DIR)/lib

STARPU_VERSION = 1.0.svn
STARPU_SUBVERSION=1.0
STARPU_DIR=$(CODELET_DIR)/starpu
STARPU_SUBDIR = $(STARPU_DIR)/starpu-$(STARPU_VERSION)
STARPU_UNIQUE_SUBDIR=$(CHPL_MAKE_TARGET_PLATFORM)-$(CHPL_MAKE_TARGET_COMPILER)
STARPU_INSTALL_SUBDIR=install/$(STARPU_UNIQUE_SUBDIR)
STARPU_INSTALL_DIR=$(CODELET_DIR)/$(STARPU_INSTALL_SUBDIR)
STARPU_BUILD_SUBDIR=build/$(STARPU_UNIQUE_SUBDIR)
STARPU_BUILD_DIR=$(CODELET_DIR)/$(STARPU_BUILD_SUBDIR)
STARPU_SRC_DIR = $(STARPU_SUBDIR)/src
STARPU_INCLUDE_DIR = $(STARPU_INSTALL_DIR)/include/starpu/$(STARPU_SUBVERSION)
STARPU_INCLUDE2_DIR = $(STARPU_BUILD_DIR)/src
STARPU_LIB_DIR = $(STARPU_INSTALL_DIR)/lib
