#!/usr/bin/env perl

use File::Basename;

$utildirname = dirname($0);

$preset_localeModel=$ENV{'CHPL_LOCALE_MODEL'};

if ($preset_localeModel eq "") {
    # eventually, we'll want to pick defaults based on platforms, but for
    # today things are impoverished enough for us to want to pick "flat"
    # by default
    #$platform = `$utildirname/platform --target`;
    #chomp($platform);
    $localeModel = "flat";
} else {
    $localeModel = $preset_localeModel;
}


print "$localeModel\n";
exit(0);
